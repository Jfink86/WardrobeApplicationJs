@model IEnumerable<WardrobeApplication.Models.Top>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<img src="~/Content/ImgFolder/AccTie.gif" width="1200" height="125" />

<div class="col-4 square bg text" id="villachoice">
    <div class="content">

        <h1 class="lochead">An UpScale Look For Every Occasion at OuTRaGouSLy HiGh Prices</h1>
        <p class="locp">While Supplies Last "Check Availability Below!!"</p>
        <input id="buttonloc" type="submit" value="Check Availability" onmouseover="overBtn(this)" onmouseout="outBtn(this)" onclick="GetVilla();SwapDivsWithClick('villachoice', 'villaswap');">

    </div>
</div>
<div class="col-4 square bg text" id="villaswap" style="display:none">
    <div class="content">
        <p class="lochead">HURRY Only a few still Available!!!</p>
        <p class="locp" id="villout"></p>
        <input id="buttonloc" type="submit" value="Return" onmouseover="overBtn(this)" onmouseout="outBtn(this)" onclick="SwapDivsWithClick('villachoice', 'villaswap');">
    </div>
</div>
@foreach (var item in Model)
{
   

    <div class="col-md-2 card">
        <h2> @Html.DisplayFor(modelItem => item.TopName)</h2>
        <img src="@Html.DisplayFor(modelItem => item.Photo)" alt="Avatar" style="width:200px" height="225">
      
            <button id="orig" onmouseout="outBtn(this)" onmouseover="overBtn(this)"> <h4><b> @Html.DisplayFor(modelItem => item.Occasion)</b></h4></button>
           

            <p>
                @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TopID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
            </p>
        </div>
   


}

